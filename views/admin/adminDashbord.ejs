                <script>
                  document.addEventListener("DOMContentLoaded", function() {
                    // Sales Chart
                    const salesCtx = document.getElementById('salesChart').getContext('2d');
                    
                    const salesData = {
                      labels: <%- JSON.stringify(salesData.labels) %>,
                      datasets: [{
                        label: 'Total Sales',
                        data: <%- JSON.stringify(salesData.sales) %>,
                        backgroundColor: 'rgba(13, 110, 253, 0.7)',
                        borderColor: 'rgba(13, 110, 253, 1)',
                        borderWidth: 2,
                        borderRadius: 8,
                        hoverBackgroundColor: 'rgba(13, 110, 253, 0.9)',
                        hoverBorderColor: 'rgba(13, 110, 253, 1)',
                      }]
                    };
              
                    new Chart(salesCtx, {
                      type: 'bar',
                      data: salesData,
                      options: {
                        responsive: true,
                        maintainAspectRatio: false,
                        plugins: {
                          legend: { display: false },
                          tooltip: {
                            mode: 'index',
                            intersect: false,
                            backgroundColor: 'rgba(0, 0, 0, 0.8)',
                            titleColor: '#ffffff',
                            bodyColor: '#ffffff',
                            borderColor: '#ffffff',
                            borderWidth: 1,
                            cornerRadius: 5,
                            displayColors: false,
                            callbacks: {
                              label: function(context) {
                                return `Sales: ₹${context.parsed.y.toLocaleString()}`;
                              }
                            }
                          }
                        },
                        scales: {
                          x: {
                            type: 'category',
                            title: {
                              display: true,
                              text: 'Date',
                              color: '#0d6efd',
                              font: { size: 14, weight: 'bold' }
                            },
                            grid: { display: false },
                            ticks: { color: '#0d6efd' }
                          },
                          y: {
                            title: {
                              display: true,
                              text: '(net revenue)',
                              color: '#0d6efd',
                              font: { size: 14, weight: 'bold' }
                            },
                            grid: { borderDash: [3, 3], color: '#d3d3d3' },
                            ticks: { color: '#0d6efd' }
                          }
                        }
                      }
                    });
              
                    // Payment Methods Chart
                    const paymentMethodsCtx = document.getElementById('paymentMethodsChart').getContext('2d');
                    
                    const paymentMethodsData = {
                      labels: <%- JSON.stringify(paymentMethodsData.labels) %>,
                      datasets: [{
                        label: 'Payment Methods',
                        data: <%- JSON.stringify(paymentMethodsData.values) %>,
                        backgroundColor: [
                          'rgba(255, 99, 132, 0.7)',
                          'rgba(54, 162, 235, 0.7)',
                          'rgba(255, 206, 86, 0.7)',
                          'rgba(75, 192, 192, 0.7)',
                          'rgba(153, 102, 255, 0.7)'
                        ],
                        hoverBackgroundColor: [
                          'rgba(255, 99, 132, 0.9)',
                          'rgba(54, 162, 235, 0.9)',
                          'rgba(255, 206, 86, 0.9)',
                          'rgba(75, 192, 192, 0.9)',
                          'rgba(153, 102, 255, 0.9)'
                        ],
                        borderWidth: 1,
                        borderRadius: 5,
                        hoverOffset: 10
                      }]
                    };
              
                    new Chart(paymentMethodsCtx, {
                      type: 'pie',
                      data: paymentMethodsData,
                      options: {
                        responsive: true,
                        maintainAspectRatio: false,
                        plugins: {
                          legend: {
                            position: 'bottom',
                            labels: {
                              color: '#0d6efd',
                              font: { size: 14, weight: '500' },
                              padding: 20
                            }
                          },
