    <script>

function confirmDelete(event) {
  event.preventDefault(); // Prevent form submission initially

  Swal.fire({
    title: "❌ Are you sure you want to delete this product?",
    text: "You won't be able to revert this!",
    icon: "warning",
    showCancelButton: true,
    confirmButtonColor: "#3085d6",
    cancelButtonColor: "#d33",
    confirmButtonText: "Yes, delete it!"
  }).then((result) => {
    if (result.isConfirmed) {
      event.target.submit(); 
    }
  });

  return false; 
}


            

function confirmUnhide(event) {
  event.preventDefault(); 

  Swal.fire({
    title: "Are you sure you want to unhide this product?",
    text: "This action cannot be undone.",
    icon: "warning",
    showCancelButton: true,
    confirmButtonColor: "#3085d6",
    cancelButtonColor: "#d33",
    confirmButtonText: "Yes, unhide it!"
  }).then((result) => {
    if (result.isConfirmed) {
      event.target.submit(); 
    }
  });

  return false;
}

function confirmHide(event) {
  event.preventDefault(); // Prevent form submission initially

  Swal.fire({
    title: "Are you sure you want to hide this product?",
    text: "This action cannot be undone.",
    icon: "warning",
    showCancelButton: true,
    confirmButtonColor: "#3085d6",
    cancelButtonColor: "#d33",
    confirmButtonText: "Yes, hide it!"
  }).then((result) => {
    if (result.isConfirmed) {
      event.target.submit(); // Submit the form if user confirms
    }
  });

  return false; // Prevent form submission until user confirms
}





function confirmEdit(event) {
  event.preventDefault(); 
  Swal.fire({
    title: "📝 Are you sure you want to edit this product?",
    text: "This action cannot be undone.",
    icon: "warning",
    showCancelButton: true,
    confirmButtonColor: "#3085d6",
    cancelButtonColor: "#d33",
    confirmButtonText: "Yes, edit it!"
  }).then((result) => {
    if (result.isConfirmed) {
      event.target.submit(); // Submit the form if user confirms
    }
  });

  return false; // Cancel further form processing until user confirms
}

document.addEventListener('DOMContentLoaded', function() {
