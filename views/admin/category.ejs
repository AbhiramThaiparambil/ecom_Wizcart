    <script>

function validateCategoryInput() {
      const categoryInput = document.getElementById('categoryName');
      const submitButton = document.querySelector('button[type="submit"]');
      const trimmedValue = categoryInput.value.trim();

      if (trimmedValue === ' ' || categoryInput.value.startsWith(' ')) {
        categoryInput.setCustomValidity('Category name cannot be empty or start with a whitespace.');
        submitButton.disabled = true;
      } else {
        categoryInput.setCustomValidity('');
        submitButton.disabled = false;
      }
    }




    function confirmDelete(event, form) {
    event.preventDefault(); // Prevent the default form submission

    Swal.fire({
  
    html: '<span style="color: #000000;"> Are you sure you want to delete this Categorie?</span>',
    showCancelButton: true,
    background: '#ffffff', // Set the background to white
    confirmButtonColor: "#3085d6",
    cancelButtonColor: "#d33",
    confirmButtonText: "delete",
    imageUrl: 'https://assets-v2.lottiefiles.com/a/e09820ea-116b-11ee-8e93-4f2a1602d144/HdbA8EJlUN.gif', // Add your image path here
    imageWidth: 300, // Optional: adjust the width of the image
    imageHeight: 150, // Optional: adjust the height of the image
    imageAlt: 'Custom image', // Optional: add an alt text for the image
})

.then((result) => {
        if (result.isConfirmed) {
            Swal.fire({
                title: "Deleted!",
                text: "Your file has been deleted.",
                icon: "success"
            }).then(() => {
                form.submit(); 
            });
        }
    });
    return false; 
}




function confirmedit(index) {
    Swal.fire({
        title: 'Are you sure?',
        text: "Do you want to edit this category?",
        icon: 'warning',
        showCancelButton: true,
        confirmButtonColor: '#3085d6',
        cancelButtonColor: '#d33',
        confirmButtonText: 'Yes, edit it!'
    }).then((result) => {
        if (result.isConfirmed) {
            // Trigger the hidden button to show the modal
            document.getElementById('editModal' + index).click();

            // Set the modal input values
            document.getElementById('modalEditCatName').value = document.getElementById('editCatName' + index).value;
            document.getElementById('catEditId').value = document.getElementById('editCatId' + index).value;
        }
    });
}







