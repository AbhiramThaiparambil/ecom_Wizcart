        <div class="container">
            ledger-Book
            <% orders.forEach(function(order) { %>
                
                <hr>
                <div class="ledger-entry mb-4 p-3 border " >
                    <div class="row ledger-header mb-2">
                        <div class="col-3">
                            <strong>Date:</strong> <%= new Date(order.orderDate).toISOString().split('T')[0] %>
                        </div>
                        <div class="col-3">
                            <strong>Order ID:</strong> <%= order._id %>
                        </div>
                        <div class="col-3">
                            <strong>Payment Method:</strong> <%= order.paymentMethod.charAt(0).toUpperCase() + order.paymentMethod.slice(1) %>
                        </div>
                      
                    </div>
                    <div class="ledger-body">
                        <div class="row ledger-titles text-muted">
                            <div class="col-4"><strong>Product</strong></div>
                            <div class="col-4"><strong>Status</strong></div>
                            <div class="col-4"><strong>Product Price (₹)</strong></div>
                        </div>
                        <% order.product.forEach(function(p, index) { %>
                        <div class="row ledger-item py-2 <%= index % 2 === 0 ? 'bg-light' : '' %>">
                            <div class="col-4">Product <%= index + 1 %></div>
                            <div class="col-4"><%= p.status.charAt(0).toUpperCase() + p.status.slice(1) %></div>
                            <div class="col-4">₹<%= p.productPrice.toLocaleString('en-IN') %></div>
                        </div>
                        <% }); %>
            
                        <!-- Display total, discount, and final price at the bottom -->
                        <div class="row ledger-footer mt-3">
                            <div class="col-4"><strong>Total Price (₹):</strong></div>
                            <div class="col-4"><strong>Discount (₹):</strong></div>
                            <div class="col-4"><strong>status:</strong></div>
                        </div>
                        <div class="row ledger-footer-values">
                            <div class="col-4">₹<%= order.totalPrice.toLocaleString('en-IN') %></div>
                            <div class="col-4">₹<%= order.discount.toLocaleString('en-IN') %></div>
                            <div class="col-4">
                                <% 
                                    const isNonCOD = order.paymentMethod !== 'COD';
                                    const hasCancelledOrReturned = order.product.some(p => p.status === 'cancelled' || p.status === 'returned');
                                %>
                                <% if (isNonCOD && !hasCancelledOrReturned) { %>
                                   + Credited
                                <% } else { %>
                                    pending ₹<%= order.finalPrice.toLocaleString('en-IN') %>
                                <% } %>
                            </div>
                        </div>
                    </div>
                </div>
            <% }); %>
