  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">

  <div class="container mt-5">
    <h1 class="mb-4">Offer Management</h1>
    <table class="table table-bordered table-hover">
      <thead>
        <tr>
          <th scope="col">Product img</th>
          <th scope="col">Product Name</th>
          <th scope="col">Normal Price</th>
          <th scope="col">Offer Price</th>
          <th scope="col">Offer</th>
          <th scope="col">Actions</th>
        </tr>
      </thead>
      <tbody>
        <% products.forEach(product => { %>
        <tr>
          <td><img style="width: 100px; height: 70px;" src="<%= product.product_img[0] %>" alt=""></td>
          <td><%= product.product_name %></td>
          <td>₹<%= product.Maximum_Retail_Price.toFixed(2) %></td>
          <td>₹<%= product.price.toFixed(2) %></td>
          <td>
            <% 
              var difference = product.Maximum_Retail_Price - product.price;
              var discountPercentage = (difference / product.Maximum_Retail_Price) * 100;
            %>
            <% if (difference > 0) { %>
              <span class="badge bg-success">Discount: ₹<%= difference.toFixed(2) %> (<%= discountPercentage.toFixed(2) %>%)</span>
            <% } else { %>
              <span class="badge bg-secondary">No Offer</span>
            <% } %>
          </td>
          <td>
            <div class="d-flex justify-content-start">
              <button class="btn btn-primary btn-sm me-2" data-bs-toggle="modal" data-bs-target="#editOfferModal<%= product._id %>">Edit Offer</button>
          
              <form id="removeOfferForm<%= product._id %>" action="/remove-offer" method="post" onsubmit="return confirmRemoveOffer('<%= product._id %>')">
                <input type="hidden" name="removeID" value="<%= product._id %>">
                <input type="hidden" name="removeMrp" value="<%= product.Maximum_Retail_Price %>">
                <button class="btn btn-danger btn-sm" type="submit">Remove Offer</button>
              </form>
            </div>
          </td>
        </tr>

        <!-- Edit Offer Modal -->
        <div class="modal fade" id="editOfferModal<%= product._id %>" tabindex="-1" aria-labelledby="editOfferModalLabel<%= product._id %>" aria-hidden="true">
          <div class="modal-dialog">
            <div class="modal-content">
              <div class="modal-header">
                <h5 class="modal-title" id="editOfferModalLabel<%= product._id %>">Edit Offer for <%= product.product_name %></h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
              </div>
              <form id="offerForm<%= product._id %>" action="/new-offer" method="POST">
                <div class="modal-body">
                  <div class="mb-3">
                    <label for="discount<%= product._id %>" class="form-label">Discount price</label>
                    <input type="number"  class="form-control" id="discount<%= product._id %>" name="discount" value="<%= product.offer ? product.offer.discount : '' %>" required>
                    <input type="text" hidden name="offerProduct_id" value="<%=product._id%>">
                    <input type="text" hidden name="offerProduct_mrp" value="<%= product.Maximum_Retail_Price  %>">
                    <!-- Discount badge -->
                    <span id="discountBadge<%= product._id %>" class="badge bg-secondary">Enter discount to see the percentage</span>
                    
                    <!-- Error message -->
                    <div id="error<%= product._id %>" class="text-danger mt-2" style="display:none;">The discount amount cannot exceed the MRP.</div>
                    
                  </div>
                </div>
                <div class="modal-footer">
                  <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
                  <button type="submit" class="btn btn-primary">Save Offer</button>
                </div>
              </form>
            </div>
          </div>
        </div>
        <% }); %>
      </tbody>
    </table>
  </div>
  <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
  <script>
    document.addEventListener('DOMContentLoaded', function () {
      <% products.forEach(product => { %>
        (function() {
          var discountInput = document.getElementById('discount<%= product._id %>');
          var discountBadge = document.getElementById('discountBadge<%= product._id %>');
          var errorDiv = document.getElementById('error<%= product._id %>');
          var form = document.getElementById('offerForm<%= product._id %>');
          var mrp = <%= product.Maximum_Retail_Price %>;
          var sellingPrice = <%= product.price %>;
    
          discountInput.addEventListener('input', function () {
            var discountValue = parseFloat(discountInput.value);
            var finalPrice = sellingPrice - discountValue;
    
            if (!isNaN(discountValue) && discountValue > 0) {
              var discountPercentage = ((sellingPrice - finalPrice) / mrp) * 100;
    
              // Check if discount amount exceeds the MRP
              if (discountValue > mrp) {
                errorDiv.style.display = "block";
                discountBadge.textContent = "Invalid Discount";
                discountBadge.className = "badge bg-danger";
              } else {
                errorDiv.style.display = "none";
                discountBadge.textContent = `Discount: ₹${discountValue.toFixed(2)} (${discountPercentage.toFixed(2)}%)`;
                discountBadge.className = "badge bg-success";
              }
            } else {
              discountBadge.textContent = "No Offer";
              discountBadge.className = "badge bg-secondary";
            }
          });
    
          form.addEventListener('submit', function (event) {
            event.preventDefault(); // Prevent default form submission to show the confirmation dialog
    
            Swal.fire({
              title: 'Add New Offer',
              text: 'Are you sure you want to add this exciting new offer?',
              imageUrl: 'https://cdn-icons-png.flaticon.com/512/6188/6188592.png',
              imageWidth: 200,
              imageHeight: 200,
              imageAlt: 'New Offer Image',
            
              showCancelButton: true,
              confirmButtonColor: '#4CAF50',
              cancelButtonColor: '#F44336',
              confirmButtonText: 'Yes, add it!',
              cancelButtonText: 'No, cancel',
              background: '#f7f7f7',
              backdrop: `
                rgba(0,0,123,0.4)
                url("https://example.com/path/to/confetti.gif")
                left top
                no-repeat
              `
            }).then((result) => {
              if (result.isConfirmed) {
                var discountValue = parseFloat(discountInput.value);
    
                // Prevent form submission if the discount is greater than MRP
                if (discountValue > mrp) {
                  errorDiv.style.display = "block";
                } else {
                  errorDiv.style.display = "none";
                  form.submit(); // Submit the form if the discount is valid
                  Swal.fire({
                    title: 'Offer Added!',
                    text: 'Your new offer has been successfully added to the store.',
                    icon: 'success',
                    confirmButtonColor: '#4CAF50',
                    timer: 3000,
                    timerProgressBar: true
                  });
                }
              }
            });
          });
        })();
      <% }); %>
    });



    function confirmRemoveOffer(productId) {
    Swal.fire({
      title: 'Are you sure?',
      text: "Do you really want to remove this offer?",
      icon: 'warning',
      showCancelButton: true,
      confirmButtonColor: '#d33',
      cancelButtonColor: '#3085d6',
      confirmButtonText: 'Yes, remove it!',
      cancelButtonText: 'No, keep it'
    }).then((result) => {
      if (result.isConfirmed) {
        document.getElementById('removeOfferForm' + productId).submit();
        Swal.fire({
          title: 'Offer Removed!',
          text: 'The offer has been successfully removed.',
          icon: 'success',
          confirmButtonColor: '#4CAF50',
          timer: 3000,
          timerProgressBar: true
        });
      }
    });
  }

    </script>
    
