</head>
<body>
    <div class="container mt-5">
        
        <% if (returnRequests.length > 0) { %>
            <% returnRequests.forEach(function(request) { %>
                <div class="card mb-4">
                    <div class="card-header">
                        Return Request Details
                    </div>
                    <div class="card-body">
                        <div class="row">
                            <div class="col-md-4 text-center">
                                <% if (request.productDetails && request.productDetails.product_img && request.productDetails.product_img.length > 0) { %>
                                    <img src="<%= request.productDetails.product_img[0] %>" alt="Product Image" class="product-image">
                                <% } %>
                            </div>
                            <div class="col-md-8">
                                <div class="row">
                                    <div class="col-md-6">
                                        <div class="user-details">
                                            <h5>Customer Details</h5>
                                            <p><strong>Name:</strong> <%= request.name %></p>
                                            <p><strong>Address:</strong> <%= request.shipment_address.address %>, <%= request.shipment_address.city %>, <%= request.shipment_address.state %> <%= request.shipment_address.pincode %></p>
                                            <p><strong>Contact:</strong> <%= request.shipment_address.mobile %></p>
                                        </div>
                                    </div>
                                    <div class="col-md-6">
                                        <div class="user-details">
                                            <h5>Order Details</h5>
                                            <p><strong>Product:</strong> <%= request.productDetails.product_name %></p>
                                            <p><strong>Order ID:</strong> <%= request._id %></p>
                                            <p><strong>Price:</strong>â‚¹<%= request.product.productPrice %></p>
                                            <p><strong>Status:</strong> <%= request.product.status %></p>

                                            <p><strong>Quantity:</strong> <%= request.product.quantity %></p>
                                        </div>
                                    </div>
                                </div>
                                <div class="action-buttons">
                                    <button class="btn btn-success" 
                                    onclick="acceptAndRefund('<%= request._id %>', 
                                                             '<%= request.product.productId %>', 
                                                             <%= request.product.productPrice %>, 
                                                             '<%= request.productDetails.product_name %>', 
                                                             '<%= request.user_id %>')">
                                        Accept & Refund
                                    </button>
                                    <button class="btn btn-danger" onclick="rejectReturn('<%= request._id %>','<%= request.product.productId %>')">Reject Request</button>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            <% }) %>
        <% } else { %>
            <div class="alert alert-danger" role="alert">
              <h1 class="text-center">  No return requests found </h1>             </div>
           
        <% } %>
    </div>

    <!-- SweetAlert2 JS -->
    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11/dist/sweetalert2.all.min.js"></script>
    <script>

    function acceptAndRefund(orderId, productId, productPrice, productName, user_id) {
        Swal.fire({
            title: 'Are you sure?',
            text: "You are about to accept this return request and process the refund.",
            icon: 'warning',
            showCancelButton: true,
            confirmButtonText: 'Yes, accept & refund!',
            cancelButtonText: 'No, cancel!',
            reverseButtons: true
        }).then((result) => {
            if (result.isConfirmed) {
                const data = {
                    orderId: orderId, 
                    productId: productId, 
                    productPrice: productPrice, 
                    productName: productName, 
                    user_id: user_id 
                };

                fetch(`/acceptReturn`, { 
                    method: 'PUT',
                    headers: {
                        'Content-Type': 'application/json',
                    },
                    body: JSON.stringify(data) // Send the data object
                })
                .then(response => response.json())
                .then(data => {
                    Swal.fire(
                        'Processed!',
                        'The return request has been accepted and the payment refunded.',
                        'success'
                    );
                    location.reload(); // Reload the page after successful response
                })
                .catch(error => {
                    console.error('Error:', error);
                    Swal.fire(
                        'Error!',
                        'There was a problem processing the return request.',
                        'error'
                    );
                });
            }
        });
    }

    function rejectReturn(orderId, productId) {
    Swal.fire({
        title: 'Are you sure?',
        text: "You are about to reject this return request.",
        icon: 'warning',
        showCancelButton: true,
        confirmButtonText: 'Yes, reject it!',
        cancelButtonText: 'No, cancel!',
        reverseButtons: true
    }).then((result) => {
        if (result.isConfirmed) {
            fetch(`/reject`, { 
                method: 'PUT', // Use PUT method
                headers: {
                    'Content-Type': 'application/json',
                },
                body: JSON.stringify({ orderId, productId }) // Include both parameters in the body
            })
            .then(response => response.json())
            .then(data => {
                Swal.fire(
                    'Rejected!',
                    'The return request has been rejected.',
                    'error'
                );
                location.reload(); // Reload the page after successful response
            })
            .catch(error => {
                console.error('Error:', error);
                Swal.fire(
                    'Error!',
                    'There was a problem rejecting the return request.',
                    'error'
                );
            });
        }
    });
}


    </script>
