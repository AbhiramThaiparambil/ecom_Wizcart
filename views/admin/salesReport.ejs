    <div class="col-10 ">
        <div class="container">
        <h1 class="mb-4">Sales Report</h1>

        <!-- Date Range and Filter Options -->
        <div class="row mb-4">
            <div class="col-md-6">
                <form action="/salesReport" method="GET" class="input-group">
                    <input type="date" name="startDate" class="form-control" placeholder="Start Date">
                    <input type="date" name="endDate" class="form-control" placeholder="End Date">
                    <button class="btn btn-primary" type="submit">Filter</button>
                </form>
            </div>
            <div class="col-md-6 text-end">
                <div class="btn-group">
                    <a href="/salesReport?filter=today" 
                       class="btn btn-outline-primary <%= filterOption === 'today' ? 'btn-primary text-white' : '' %>">Today</a>
                    <a href="/salesReport?filter=week" 
                       class="btn btn-outline-primary <%= filterOption === 'week' ? 'btn-primary text-white' : '' %>">This Week</a>
                    <a href="/salesReport?filter=month" 
                       class="btn btn-outline-primary <%= filterOption === 'month' ? 'btn-primary text-white' : '' %>">This Month</a>
                </div>
            </div>
        </div>

        <!-- Filter Option Display -->
        <div class="col-12 bg-info p-2 text-white text-center mb-4">
            <%= filterOption || 'All Time' %>
        </div>

        <!-- Export Buttons -->
        <div class="row mb-4">
            <div class="col-md-12 text-end">
                <div class="btn-group">
                    <a href="/download/pdf?startDate=<%= startDate %>&endDate=<%= endDate %>&filter=<%= filterOption %>" class="btn btn-outline-secondary">Download PDF</a>
                    <a href="/download/excel?startDate=<%= startDate %>&endDate=<%= endDate %>&filter=<%= filterOption %>" class="btn btn-outline-secondary">Download Excel</a>
                </div>
            </div>
        </div>

        <!-- Overview Cards -->
        <div class="row">
            <!-- Total Sales Card -->
            <div class="col-md-6 col-lg-3 mb-4">
                <div class="card bg-primary text-white shadow-sm border-0">
                    <div class="card-body d-flex flex-column align-items-center">
                        <h5 class="card-title mb-3">Total Sales</h5>
                        <p class="card-text fs-3 fw-bold">â‚¹<%= totalSales || 'N/A' %></p>
                        <p class="card-subtitle text-light mb-2">for <%= filterOption || 'Selected Period' %></p>
                    </div>
                </div>
            </div>

            <!-- Total Discounts Card -->
            <div class="col-md-6 col-lg-3 mb-4">
                <div class="card bg-success text-white shadow-sm border-0">
                    <div class="card-body d-flex flex-column align-items-center">
                        <h5 class="card-title mb-3">Coupon Discounts</h5>
                        <p class="card-text fs-3 fw-bold">â‚¹<%= totalDiscount || 'N/A' %></p>
                        <p class="card-subtitle text-light mb-2">for <%= filterOption || 'Selected Period' %></p>
                    </div>
                </div>
            </div>

            <!-- Total Product Discount Card -->
            <div class="col-md-6 col-lg-3 mb-4">
                <div class="card bg-info text-white shadow-sm border-0">
                    <div class="card-body d-flex flex-column align-items-center">
                        <h5 class="card-title mb-3">Total Product Discount</h5>
                        <p class="card-text fs-3 fw-bold">â‚¹<%= totalProductDiscount || '0.00' %></p>
                        <p class="card-subtitle text-light mb-2">for <%= filterOption || 'Selected Period' %></p>
                    </div>
                </div>
            </div>

            <!-- Total Profit Card -->
            <div class="col-md-6 col-lg-3 mb-4">
                <div class="card bg-warning text-dark shadow-sm border-0">
                    <div class="card-body d-flex flex-column align-items-center">
                        <h5 class="card-title mb-3">Total Profit</h5>
                        <p class="card-text fs-3 fw-bold">â‚¹<%= totalProfit || 'N/A' %></p>
                        <p class="card-subtitle text-dark mb-2">for <%= filterOption || 'Selected Period' %></p>
                    </div>
                </div>
            </div>
        </div>

        <!-- Coupons Used -->
        <div class="row mt-4">
            <div class="col-md-12">
                <div class="card">
                    <div class="card-header">
                        Used Coupons
                    </div>
                    <div class="card-body">
                        <% if (Coupons && Coupons.length > 0) { %>
                            <table class="table">
                                <thead>
                                    <tr>
                                        <th>Coupon Code</th>
                                        <th>Count</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    <% Coupons.forEach(coupon => { %>
                                        <% for (const [code, count] of Object.entries(coupon)) { %>
                                            <tr>
                                                <td><%= code %></td>
                                                <td><%= count %></td>
                                            </tr>
                                        <% } %>
                                    <% }); %>
                                </tbody>
                            </table>
                        <% } else { %>
                            <p>No coupons used in this period.</p>
                        <% } %>
                    </div>
                </div>
            </div>
        </div>

        <!-- Recent Transactions Table with Pagination -->
        <div class="row mt-4">
            <div class="col-md-12">
                <div class="card">
                    <div class="card-header">
                        Order Completed <strong><%= totalOrderedProductCount %></strong> Products on a <%= filterOption %>
                    </div>
                    <div class="card-body">
                        <table class="table">
                            <thead>
                                <tr>
                                    <th>Date</th>
                                    <th>Product Name</th>
                                    <th>Quantity</th>
                                    <th>Product Discount</th>
                                    <th>Original Price</th>
                                    <th>Price</th>
                                </tr>
                            </thead>
                            <tbody>
                                <% if (transactions && transactions.length > 0) { %>
                                    <% transactions.forEach(transaction => { %>
                                        <tr>
                                            <td><%= transaction.date || 'N/A' %></td>
                                            <td><%= transaction.productName || 'N/A' %></td>
                                            <td><%= transaction.quantity || 0 %></td>
                                            <td>â‚¹<%= transaction.Product_discount || '0.00' %></td>
                                            <td>â‚¹<%= transaction.originalPrice || '0.00' %></td>
                                            <td>â‚¹<%= transaction.price || '0.00' %></td>
                                        </tr>
                                    <% }); %>
                                <% } else { %>
                                    <tr>
                                        <td colspan="6">No transactions available</td>
                                    </tr>
                                <% } %>
                            </tbody>
                        </table>
                        
                        <!-- Pagination -->
                        <nav>
                            <ul class="pagination justify-content-center">
                                <% for (let i = 1; i <= totalPages; i++) { %>
                                    <li class="page-item <%= i === currentPage ? 'active' : '' %>">
                                        <a class="page-link" href="/salesReport?page=<%= i %>"><%= i %></a>
                                    </li>
                                <% } %>
                            </ul>
                        </nav>
                    </div>
                </div>
            </div>
        </div>

    </div>

</div>
