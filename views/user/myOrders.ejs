async function completePayment(orderId) {
  Swal.fire({
    title: 'Complete Your Payment',
    text: 'Are you ready to finalize your order?',
    icon: 'info',
    iconColor: '#3085d6',
    showCancelButton: true,
    confirmButtonColor: '#28a745',
    cancelButtonColor: '#dc3545',
    confirmButtonText: '<i class="fas fa-check"></i> Yes, pay now',
    cancelButtonText: '<i class="fas fa-times"></i> Cancel',
    background: '#f8f9fa',
    customClass: {
      title: 'text-primary',
      content: 'text-secondary',
      confirmButton: 'btn btn-success',
      cancelButton: 'btn btn-danger'
    }
  }).then(async (result) => {
    if (result.isConfirmed) {
      try {
        const response = await fetch('/complete-payment', {
          method: 'POST',
          headers: {
            'Content-Type': 'application/json'
          },
          body: JSON.stringify({ orderId })
        });
        



        
        const data = await response.json();

        if (response.ok) {
          initiateRazorpayTransaction(data,orderId);
        } else {
          throw new Error(data.message || 'Failed to complete payment');
        }
      } catch (error) {
        console.error('Error:', error.message);
        Swal.fire({
          title: 'Payment Error',
          text: error.message || 'An error occurred while completing the payment. Please try again.',
          icon: 'error',
          confirmButtonText: 'OK'
        });
      }
    }
  });
}

function initiateRazorpayTransaction(paymentData,objId) {
  const options = {
    key: paymentData.key,
    currency: paymentData.currency,
    name: "WIZCART",
    description: "wizcart private limited",
    order_id: paymentData.order_id,
    handler: async function (response) {
      console.log("Payment ID: ", response.razorpay_payment_id);
      console.log("Order ID: ", response.razorpay_order_id);
      console.log("Signature: ", response.razorpay_signature);

      try {
        const captureResponse = await fetch('/capture-payment', {
          method: 'POST',
          headers: {
            'Content-Type': 'application/json',
          },
          body: JSON.stringify({
            payment_id: response.razorpay_payment_id,
            order_id: response.razorpay_order_id,
            signature: response.razorpay_signature,
            orderObjid:objId
          })
        });

        const captureData = await captureResponse.json();

        if (captureResponse.ok) {
          Swal.fire({
            title: 'Payment Successful!',
            text: 'Your payment has been verified successfully.',
            icon: 'success',
            confirmButtonText: 'OK'
          }).then(() => {
            window.location = "/orderSuccess";
          });
        } else {
          throw new Error(captureData.message || 'Payment verification failed. Please try again.');
        }
      } catch (err) {
        Swal.fire({
          title: 'Payment Verification Failed',
          text: err.message || 'An error occurred while verifying the payment. Please try again.',
          icon: 'error',
          confirmButtonText: 'OK'
        });
      }
    },
    theme: {
      color: "#0EB9F2"
    }
  };

  const rzp1 = new Razorpay(options);
  rzp1.on('payment.failed', function (response) {
    rzp1.close();
    window.location = '/payment-pending';
  });
  rzp1.open();
}




