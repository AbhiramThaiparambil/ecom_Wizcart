<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Order History</title>
  <link href="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/css/bootstrap.min.css" rel="stylesheet">
</head>
<body>
  <div class="container mt-5">
    <h2 class="mb-4">Order History</h2>
    <% if (orders.length === 0) { %>
      <div class="alert alert-info">No orders found.</div>
    <% } else { %>
      <% orders.forEach(order => { %>
        <div class="card mb-4">
          <div class="card-header">
            Order ID: <%= order._id %> | Status: <%= order.status %>
          </div>
          <div class="card-body">
            <h5 class="card-title">Order Details</h5>
            <p><strong>Name:</strong> <%= order.name %></p>
            <p><strong>Email:</strong> <%= order.email %></p>
            <p><strong>Payment Method:</strong> <%= order.paymentMethod %></p>
            <p><strong>Order Date:</strong> <%= new Date(order.orderDate).toLocaleDateString() %></p>

            <h5 class="mt-3">Shipment Address</h5>
            <p><strong>Name:</strong> <%= order.shipment_address.name %></p>
            <p><strong>Mobile:</strong> <%= order.shipment_address.mobile %></p>
            <p><strong>Address:</strong> <%= order.shipment_address.address %>, <%= order.shipment_address.locality %>, <%= order.shipment_address.city %>, <%= order.shipment_address.state %> - <%= order.shipment_address.pincode %></p>
            <p><strong>Landmark:</strong> <%= order.shipment_address.landmark %></p>
            <p><strong>Alternate Mobile:</strong> <%= order.shipment_address.altmobile %></p>

            <h5 class="mt-3">Products</h5>
            <% order.product.forEach((prod, index) => { %>
              <div class="mb-2">
                <p><strong>Product Name:</strong> <%= order.newone[index].product_name %></p>
                <p><strong>Quantity:</strong> <%= prod.quantity %></p>
                <p><strong>Price:</strong> â‚¹<%= order.newone[index].price %></p>
                <p><strong>Product Description:</strong> <%= order.newone[index].product_description %></p>
                <img src="/path/to/your/images/<%= order.newone[index].product_img[0] %>" alt="<%= order.newone[index].product_name %>" class="img-fluid" width="150">
              </div>
            <% }) %>
          </div>
        </div>
      <% }) %>
    <% } %>
  </div>
</body>
</html>
