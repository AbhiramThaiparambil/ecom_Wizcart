    <style>
        .custom-breadcrumb {
    background-color: transparent; /* No background color */
    padding: 10px 15px; /* Add some padding */
    border-radius: 5px; /* Rounded corners */
    font-size: 1.1rem; /* Slightly larger font size */
}

.custom-breadcrumb .breadcrumb-item a {
    color: #007bff; /* Bootstrap primary color for links */
    text-decoration: none; /* Remove underline */
    font-weight: 500; /* Medium font weight */
    transition: color 0.3s ease; /* Smooth color transition */
}

.custom-breadcrumb .breadcrumb-item.active a {
    color: #6c757d; /* Darker gray for the active item */
}

.custom-breadcrumb .breadcrumb-item a:hover {
    color: #0056b3; /* Darker blue on hover */
}

    </style>

    <nav aria-label="breadcrumb">
        <ol class="breadcrumb custom-breadcrumb ms-5">
            <li class="breadcrumb-item"><a href="/home">Home</a></li>
            <li class="breadcrumb-item active"><a >Wallet</a></li>
        </ol>
        
    </nav>

    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <style>
        body {
            background-color: #f5f5f5;
        }
        .wallet-container {
            max-width: 800px;
            margin: 50px auto;
            padding: 20px;
            background-color: #ffffff;
            border-radius: 8px;
            box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
        }
        .wallet-balance {
            font-size: 2rem;
            font-weight: bold;
            color: #4CAF50;
        }
        .wallet-header {
            display: flex;
            justify-content: space-between;
            align-items: center;
            margin-bottom: 20px;
        }
        .transaction-list {
            margin-top: 30px;
        }
        .transaction-item {
            padding: 15px;
            margin-bottom: 10px;
            background-color: #f8f9fa;
            border-radius: 8px;
            display: flex;
            justify-content: space-between;
            align-items: center;
            border-left: 5px solid #4CAF50;
            transition: transform 0.2s ease;
        }
         
        .transaction-item1{
            padding: 15px;
            margin-bottom: 10px;
            background-color: #f8f9fa;
            border-radius: 8px;
            display: flex;
            justify-content: space-between;
            align-items: center;
            border-left: 5px solid #ff0000;
            transition: transform 0.2s ease;
        }
      
        

        .transaction-item1:hover {
            transform: translateY(-5px);
        }

        .transaction-item:hover {
            transform: translateY(-5px);
        }
        .transaction-description {
            font-size: 1.1rem;
            font-weight: 500;
        }
        .transaction-date {
            font-size: 0.9rem;
            color: #888;
        }
        .transaction-amount {
            font-size: 1.2rem;
            font-weight: bold;
            color: #333;
        }
      
      
    </style>
</head>
<body>
    <div class="wallet-container">
        <div class="wallet-header">
            <div>
                <h1>My Wallet</h1>
                <p class="wallet-balance">₹<%= balance.toFixed(2) %></p>
            </div>
            
        </div>

        <div class="transaction-list">
            <% transactions.reverse().forEach(function(transaction) { %>
                <% if (transaction.type === 'debited') { %>
                    <div class="transaction-item1">
                <% } else { %>
                    <div class="transaction-item">
                <% } %>
                    <div>
                        <p class="transaction-description"><%= transaction.description %></p>
                        <p class="transaction-date"><%= new Date(transaction.date).toLocaleDateString() %></p>
                    </div>
                    <p class="transaction-amount text-<%= transaction.amount >= 0 ? 'success' : 'danger' %>">
                        <%= transaction.type === 'debited' ? '-' : '+' %>₹<%= Math.abs(transaction.amount).toFixed(2) %>
                    </p>
                </div>
            <% }) %>
            
        </div>
    </div>

    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
